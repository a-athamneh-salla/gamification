{
    "name": "salla/gamification",
    "description": "Gamification system for Salla e-commerce platform",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmad Athamneh",
            "email": "a.alathamneh@salla.sa"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0",
        "illuminate/database": "^9.0|^10.0",
        "illuminate/contracts": "^9.0|^10.0",
        "cjmellor/level-up": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Salla\\Gamification\\": "./"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Salla\\Gamification\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Salla\\Gamification\\GamificationServiceProvider"
            ],
            "aliases": {
                "Gamification": "Salla\\Gamification\\Facades\\Gamification"
            }
        }
    }
}